<Schedule>
  <Rounds>
    <Round at="PT0H">
      <Notifications>
        <Notification type="responder">
          <To>
            <DistributionPointResponders />
          </To>
          <Channels>
            <Channel type="email" />
            <Channel type="phone" whenMissing="email" />
            <Channel type="fax" whenMissing="email" />
          </Channels>
        </Notification>
        <Notification type="master_alert">
            <To>
                <RecallInfoLinkUsers/>
            </To>
            <Channels>
                <Channel type="email"/>
            </Channels>
        </Notification>
        <Notification type="client_initiator">
            <To>
                <ClientInitiatorUsers/>
            </To>
            <Channels>
                <Channel type="email"/>
            </Channels>
        </Notification>
        <Notification type="client_cc">
            <To>
                <ClientObserverUsers/>
                <ClientOverseerUsers/>
            </To>
            <Channels>
                <Channel type="email"/>
            </Channels>
        </Notification>
      </Notifications>
    </Round>
    <Round at="PT1H">
      <Notifications>
        <Notification type="responder">
          <To>
            <DistributionPointResponders minPointStatus="generated" maxPointStatus="notified" />
          </To>
          <Channels>
            <Channel type="phone" />
          </Channels>
        </Notification>
      </Notifications>
    </Round>
    <Round at="PT2H">
      <Notifications>
        <Notification type="responder">
          <To>
            <DistributionPointResponders minPointStatus="generated" maxPointStatus="notified" />
          </To>
          <Channels>
            <Channel type="phone" />
            <Channel type="sms" />
            <Channel type="fax" whenMissing="sms" skipIfAlreadyAttempted="true" />
          </Channels>
        </Notification>
        <Notification type="client_progress" customTemplate="client_progress_midway">
          <To>
            <ClientInitiatorUsers/>
            <ClientOverseerUsers/>
          </To>
          <Channels>
            <Channel type="email"/>
          </Channels>
        </Notification>
      </Notifications>
    </Round>
    <Round at="PT3H">
      <Notifications>
        <Notification type="responder">
          <To>
            <DistributionPointResponders minPointStatus="generated" maxPointStatus="notified" />
          </To>
          <Channels>
            <Channel type="phone" />
            <Channel type="fax" skipIfAlreadyAttempted="true" />
          </Channels>
        </Notification>
      </Notifications>
    </Round>
    <Round at="PT4H">
      <Notifications>
        <Notification type="client_progress" customTemplate="client_progress_final">
          <To>
            <ClientInitiatorUsers/>
            <ClientOverseerUsers/>
          </To>
          <Channels>
            <Channel type="email"/>
          </Channels>
        </Notification>
      </Notifications>
    </Round>
  </Rounds>
</Schedule>